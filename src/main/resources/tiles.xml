<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<!-- Define Struts Tile for Front-End module -->
	<definition name="BaseLayout" template="/layouts/template.jsp">
		<put-attribute name="title" value="Ecommerce"/>
		<put-attribute name="header" value="/layouts/header.jsp" />
		<put-attribute name="body" value="/layouts/body.jsp" />
		<put-attribute name="footer" value="/layouts/footer.jsp" />
	</definition>

	<definition name="HomePage" extends="BaseLayout">
		<put-attribute name="body" value="/WEB-INF/index.jsp" />
		<put-list-attribute name="js">
		</put-list-attribute>
		<put-list-attribute name="css">
		</put-list-attribute>
	</definition>
	
	<definition name="StoreList" extends="BaseLayout">
		<put-attribute name="body" value="/views/StoreList.jsp" />
	</definition>

</tiles-definitions>
