<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- Config variables -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:spring-server-config.properties</value>
		</property>
	</bean>

	<!-- Declare datasource -->
	<bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<!--Hibernate session factory configuration -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">

		<property name="dataSource" ref="dataSource" />

		<property name="hibernateProperties">
			<props>
				<!-- MySQL database -->
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<!-- Show SQL in console -->
				<prop key="hibernate.show_sql">true</prop>
				<!-- Readable format for SQL output in the console -->
				<prop key="hibernate.format_sql">true</prop>
			</props>
		</property>

		<property name="mappingResources">
			<list>
				<value>com/ecommerce/model/hbm/Store.hbm.xml</value>
				<value>com/ecommerce/model/hbm/User.hbm.xml</value>
				<value>com/ecommerce/model/hbm/Favorite.hbm.xml</value>
				<value>com/ecommerce/model/hbm/Review.hbm.xml</value>
				<value>com/ecommerce/model/hbm/Product.hbm.xml</value>
				<value>com/ecommerce/model/hbm/Salehistory.hbm.xml</value>
				<value>com/ecommerce/model/hbm/Category.hbm.xml</value>
				<value>com/ecommerce/model/hbm/Image.hbm.xml</value>
			</list>
		</property>

	</bean>

	<!-- Transaction manager for a single Hibernate SessionFactory -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="dataSource" ref="dataSource" />
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean id="transactionProxyTemplate" abstract="true"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="transactionManager" />
		<property name="transactionAttributes">
			<props>
				<prop key="create*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="*">PROPAGATION_SUPPORTS</prop>
			</props>
		</property>
	</bean>
	
</beans>
